#include "uart_com.h"
#include "xparameters.h"
#include "xil_types.h"
#include "xintc.h"
#include "xil_exception.h"
#include "xuartlite.h"








uart_com::uart_com(u32 ULITE_DEVICE_ID,u32 ULITE_INT_IRQ_ID,XUartLite* UPTR,XIntc* InterruptController,char* Recv_Array){
	XUartLite_Initialize(UPTR, ULITE_DEVICE_ID);


	XUartLite_SetSendHandler(UPTR, SendHandler, UPTR);
	XUartLite_SetRecvHandler(UPTR, RecvHandler, UPTR);
	XUartLite_EnableInterrupt(UPTR);
};

